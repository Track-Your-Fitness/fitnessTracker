<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fitnessTracker.activities.Activities.MainActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="@string/yourProfile"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/MainActivitySettingsImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="#B60000"
        android:contentDescription="@string/settingsBtn"
        android:src="@android:drawable/ic_menu_preferences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button

        android:id="@+id/MainActivityLogoOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#B60000"
        android:text="@string/LogoutBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="76dp"
        android:text="@string/welcome"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MainUsernameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="76dp"
        android:text="@string/username"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="1dp"
        android:text="@string/yourWorkouts"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:text="@string/selectAWorkout"
        android:textColor="#020202"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/textView7" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="66dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <Space
            android:layout_width="32dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="648dp" />

        <ImageView
            android:id="@+id/MainActivityUserProfileBtn"
            android:layout_width="70dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/profile"
            tools:srcCompat="@tools:sample/avatars" />

        <Space
            android:layout_width="70dp"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/SelectWorkoutButton"
            android:layout_width="70dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/workout1"
            tools:srcCompat="@tools:sample/avatars" />

        <Space
            android:layout_width="70dp"
            android:layout_height="25dp" />

        <ImageView
            android:id="@+id/MainActivityYourWorkoutBttn"
            android:layout_width="70dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/weights"
            tools:srcCompat="@tools:sample/avatars"

            />

        <Space
            android:layout_width="30dp"
            android:layout_height="18dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="166dp"
        android:layout_height="23dp"
        android:layout_marginTop="44dp"
        android:text="@string/selectAnExercise"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainUsernameDisplay" />

    <Button
        android:id="@+id/MainActivityBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginBottom="70dp"
        android:text="@string/back"
        app:layout_constraintBottom_toTopOf="@+id/MainActivityUpperLegsButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MainActivityCardioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="80dp"
        android:text="@string/cardio"
        app:layout_constraintBottom_toTopOf="@+id/MainActivityShouldersButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MainActivityChestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="80dp"
        android:text="@string/chest"
        app:layout_constraintBottom_toTopOf="@+id/MainActivityUpperArmsButton"
        app:layout_constraintStart_toEndOf="@+id/MainActivityNeckButton" />

    <Button
        android:id="@+id/MainActivityNeckButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="21dp"
        android:text="@string/neck"
        app:layout_constraintBottom_toTopOf="@+id/MainActivityBackButton"
        app:layout_constraintStart_toEndOf="@+id/MainActivityCardioButton" />

    <Button
        android:id="@+id/MainActivityLowerArmsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="114dp"
        android:text="@string/lowerArms"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MainActivityLowerLegsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="113dp"
        android:text="@string/lowerLegs"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/MainActivityWaistButton" />

    <Button
        android:id="@+id/MainActivityShouldersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="77dp"
        android:text="@string/shoulders"
        app:layout_constraintBottom_toTopOf="@+id/MainActivityLowerArmsButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MainActivityUpperArmsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginBottom="11dp"
        android:text="@string/upperArms"
        app:layout_constraintBottom_toTopOf="@+id/MainActivityUpperLegsButton"
        app:layout_constraintStart_toEndOf="@+id/MainActivityShouldersButton" />

    <Button
        android:id="@+id/MainActivityUpperLegsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="142dp"
        android:layout_marginBottom="18dp"
        android:text="@string/upperLegs"
        app:layout_constraintBottom_toTopOf="@+id/MainActivityLowerArmsButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MainActivityWaistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="114dp"
        android:text="@string/waist"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/MainActivityLowerArmsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>