<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fitnessTracker.activities.Activities.UserProfileActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_background"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu" />

    <TextView
        android:id="@+id/UserProfileTextViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/goldman_bold"
        android:text="@string/name"
        android:textColor="#0A100D"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/UserProfileTextViewAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/goldman_bold"
        android:text="@string/age"
        android:textColor="#0A100D"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserProfileTextViewUserName" />

    <TextView
        android:id="@+id/UserProfileAgeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/goldman_bold"
        android:text="@string/agetv"
        android:textColor="#0A100D"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/UserProfileTextViewAge"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/userProfileActivityNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/goldman_bold"
        android:text="@string/nameTextView"
        android:textColor="#0A100D"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userProfileActivityNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:fontFamily="@font/goldman_bold"
        android:text="@string/nameTag"
        android:textColor="#0A100D"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/userProfileActivityNameTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/UserProfileNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/goldman_bold"
        android:text="@string/usernametv"
        android:textColor="#0A100D"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/UserProfileTextViewUserName"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/UserProfileTextViewFitnessGoal"
        android:layout_width="309dp"
        android:layout_height="44dp"
        android:fontFamily="@font/goldman_bold"
        android:text="Inspirational Quote of the Day"
        android:textColor="#0A100D"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/UserProfileTextViewInspirationalQuote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/UserProfileTextViewInspirationalQuote"
        android:layout_width="307dp"
        android:layout_height="87dp"
        android:layout_marginBottom="88dp"
        android:fontFamily="sans-serif"
        android:text="@string/inspiration"
        android:textColor="#0A100D"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/UserProfileTextViewHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="148dp"
        android:fontFamily="@font/goldman_bold"
        android:text="@string/Height"
        android:textColor="#0A100D"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserProfileTextViewWeight" />

    <TextView
        android:id="@+id/UserProfileTextViewWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="140dp"
        android:fontFamily="@font/goldman_bold"
        android:text="@string/Weight"
        android:textColor="#0A100D"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/UserProfileHeightTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/goldman_bold"
        android:text="@string/heighttv"
        android:textColor="#0A100D"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/UserProfileTargetWeightTv"
        app:layout_constraintEnd_toStartOf="@+id/UserProfileTextViewHeight" />

    <TextView
        android:id="@+id/UserProfileTargetWeight"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="108dp"
        android:fontFamily="@font/goldman_bold"
        android:text="@string/targetWeight"
        android:textColor="#0A100D"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserProfileTextViewHeight" />

    <TextView
        android:id="@+id/UserProfileTargetWeightTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="38dp"
        android:fontFamily="@font/goldman_bold"
        android:text="@string/targetWeightTv"
        android:textColor="#0A100D"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/UserProfileTextViewFitnessGoal"
        app:layout_constraintEnd_toStartOf="@+id/UserProfileTargetWeight" />

    <TextView
        android:id="@+id/UserProfileWeightTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="23dp"
        android:fontFamily="@font/goldman_bold"
        android:text="@string/weighttv"
        android:textColor="#0A100D"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/UserProfileHeightTv"
        app:layout_constraintEnd_toStartOf="@+id/UserProfileTextViewWeight" />

    <ImageView
        android:id="@+id/UserProfileImagePicker"
        android:layout_width="137dp"
        android:layout_height="157dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        android:background="#B60000"
        android:contentDescription="@string/userProfileImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="85dp"
        android:fontFamily="@font/goldman_bold"
        android:text="+  Add Picture"
        android:textColor="#F8F5F5"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/UserProfileTextViewWeight"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>